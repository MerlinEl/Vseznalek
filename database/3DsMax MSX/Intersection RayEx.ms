s = sphere material:(standardMaterial diffuseMap:(checker()))showTextureMap s.material s.material.diffuseMap on---- Add a normal modifier to make the sphere into a meshaddModifier s (normalModifier())p1 = [-100,5,0]dir1 = s.center-p1r = ray p1 dir1---- Get the Intersection detailsarr = (intersectRayEx s r)---- Create a dummy at the point of intersectiondummy pos:(arr[1]).posarr[2]polyOp.setFaceSelection $ arr[2]meshOp.setFaceSelection $ $.selectedFaces = #{arr[2]}vsel = polyOp.getVertSelection $po = cylinder radius:5 height:20 pos:r.pos wirecolor:yellow dir:r.dir--snap vertices to surface underzray = mapScreenToWorldRay mouse.posrayobj_src = $obj_trgt = $v = 50vsel = polyOp.getVertSelection obj_srcfor v in vsel do (	vpos = polyOp.getVert obj_src v	--vpos.z += 1000000	vray = ray vpos [0,0,-1]	vray = mapScreentoWorldRay vpos	sectray = intersectRay obj_trgt vray	sectray = intersectRayEX obj_trgt vray	)po = point pos:sectray.pos wirecolor:yellowdelete popo = cylinder radius:5 height:20 pos:vray.pos wirecolor:yellow dir:vray.dir