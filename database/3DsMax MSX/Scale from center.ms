//rescale objects from center by Ren√© a Ludkafn scaleSelectedObjectsFromCenter target_obj = (	local max_dist = 40000	local max_scale = 100	local min_scale = 60	for o in selection do (		local obj_dist = distance o target_obj		local part = obj_dist / max_dist		local final_scale = 100 - (part * 40)		final_scale /= 100		format "dist:% scale:%\n" obj_dist (final_scale)		o.scale = [final_scale,final_scale,final_scale]	)	)scaleSelectedObjectsFromCenter (getNodeByName "view.01")