fn createPlane p1 p2 =(	-- Get all 4 points	topleft = p1	bottomright = p2	topright = [bottomright.x, bottomright.y, topleft.z]	bottomleft = [topleft.x, topleft.y, bottomright.z]		-- Get plane width and length	pWidth = distance topleft topright	pLength = distance topleft bottomleft	-- Get the rotation	x=normalize (topright - topleft)	z=[0,0,1]	y=normalize (cross z x)	pTransform = (matrix3 x y z topleft)		-- Create the Plane	thePlane = Plane()	thePlane.name = uniqueName "theplane_"		-- Rotate the Plane to set it upright	thePlane.dir = [0,-1,0]	ResetTransform thePlane		-- Set width and length of the Plane	thePlane.width = pWidth	thePlane.length = pLength		-- Set pivot to topleft corner	thePlane.pivot.x = thePlane.min.x	thePlane.pivot.z = thePlane.max.z		-- Position and rotate the Plane	thePlane.transform = pTransform)createPlane split_points[1] start_point