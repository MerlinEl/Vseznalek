var doc = fl.getDocumentDOM();if( doc != null ){	var lib = doc.library;	var items = lib.items;	var newSel = [];	fl.outputPanel.clear();	lib.newFolder(".movieclips/"); 	for( var a = 0; a<items.length; a++ )	{		var item = items[a];		if(item.itemType == "bitmap")		{			var name = item.name.split(".images/")[1].split(".")[0];			lib.addNewItem("movie clip", ".movieclips/" + name);			lib.editItem( ".movieclips/" + name );			var tl = doc.getTimeline();			tl.layers[0].name = "actions";			lib.addItemToDocument( {x:0, y:0}, item.name );			newSel[0] = tl.layers[0].frames[0].elements[0];			var newActions = "";			newActions += "var className:String = \"citrus.objects.CitrusSprite\";" + "\n";			newActions += "var params:Object = {" + "\n";			newActions += "\t" + "view: \""+ name +"\"" + "\n";			newActions += "};"						tl.layers[0].frames[0].actionScript = newActions;			doc.selectNone();			doc.selection = newSel;			var mat = doc.selection[0].matrix;			mat.tx = 0;			mat.ty = 0;			doc.selection[0].matrix = mat;			doc.selectNone();			doc.exitEditMode();		}	}}