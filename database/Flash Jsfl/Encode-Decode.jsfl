	function encode(value)		{			return value				.split("<").join("&lt;")				.split(">").join("&gt;")				.split("&").join("&amp;")				.split("'").join("&apos;")				.split('"').join("&quot;");		}		function decode(value)		{			return value				.split("&lt;").join("<")				.split("&gt;").join(">")				.split("&amp;").join("&")				.split("&apos;").join("'")				.split("&quot;").join('"');		}