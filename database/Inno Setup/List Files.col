procedure ListFiles(const SourcePath: string);varvar  FindRec: TFindRec;  BookDir: string;begin  MsgBox('Search in Root dir: [ '+SourcePath + '\* ]', mbInformation, MB_OK);	if FindFirst(SourcePath + '\*', FindRec) then		try		repeat    BookDir := FindRec.Name; 		if ( BookDir <> '.') and (BookDir <> '..') then        begin          if FindRec.Attributes and FILE_ATTRIBUTE_DIRECTORY = 0           then //Get files            MsgBox('Found file:' + BookDir, mbInformation, MB_OK)           else //Get directories            MsgBox('Found dir:' + BookDir, mbInformation, MB_OK);        end;		until not FindNext(FindRec);		finally			FindClose(FindRec);		end;end;//Tasks manager function function NextButtonClick(CurPageID: Integer): Boolean;begin  // allow the setup turning to the next page  Result := True;  if (CurPageID = wpInfoBefore) then begin    //MsgBox('Ve slo≈æce [ '+ExpandConstant('{#Root_Dir}')+' ] bude nastavena MultiInstance.', mbInformation, MB_OK);    ListFiles( ExpandConstant('{#Root_Dir}') );  end;end;