		private function createBrush(size:Number):Sprite{						var sp = new Sprite();			sp.mouseEnabled = false;			var taperThickness:Number = 0.8*size;			sp.graphics.clear();			sp.graphics.beginFill(0x00FF00);//temp green			sp.graphics.drawEllipse(taperThickness/2, taperThickness/2, taperThickness, taperThickness);			sp.graphics.endFill();			//var bm:BitmapData = new BitmapData(taperThickness, taperThickness, false, 0);			//bm.draw(sp, sp.transform.matrix); //that's nice			//return new Bitmap(bm);			return sp;		};			// entry point			//var ba:Sprite = createBrush(50);			//addChild(ba);