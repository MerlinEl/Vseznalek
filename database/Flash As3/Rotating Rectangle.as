package {    import flash.geom.Matrix;    import flash.geom.Point;    import flash.display.Sprite;    import flash.events.Event;    public class RegistrationPoint extends Sprite {        private var s:Sprite;        private var r:Number;        public function RegistrationPoint() {            this.s = new Sprite();            this.s.graphics.beginFill(0xFF0000);            this.s.graphics.drawRect(0.0, 0.0, 100.0, 100.0);            this.s.graphics.endFill();                        this.s.x = 100.0;            this.s.y = 100.0;            this.addChild(s);            this.addEventListener(Event.ENTER_FRAME, update);        }        public function update(e:Event):void {            var r:Point = new Point(50.0, 50.0);            var m:Matrix = new Matrix();            m.translate(-r.x, -r.y);            m.rotate(0.1);            m.translate(r.x, r.y);            m.concat(this.s.transform.matrix);            this.s.transform.matrix = m;        }    }}