import flash.text.TextField;import flash.text.TextFormat;import flash.text.TextFieldAutoSize;import flash.events.MouseEvent;	var textField1:TextField = new TextField(); textField1.name = "tf1";textField1.text = "No matter where you click on this text field the TEXT IN ALL CAPS changes format."; textField1.autoSize = TextFieldAutoSize.LEFT; addChild(textField1); addEventListener(MouseEvent.CLICK, changeText);  var textFormat1:TextFormat = new TextFormat(); textFormat1.color = 0xFF0000; textFormat1.size = 18; textFormat1.underline = true;  function changeText(e:MouseEvent):void {       if (e.target.name != "tf1") return;   textField1.setTextFormat(textFormat1, 49, 65); }var textField2:TextField = new TextField(); textField2.name = "tf2";textField2.y = 200textField2.text = "Click on a word change text format. Also works with, comma and dot."; textField2.autoSize = TextFieldAutoSize.LEFT; addChild(textField2); addEventListener(MouseEvent.CLICK, changeText2);  var textFormat2:TextFormat = new TextFormat(); textFormat2.color = 0xFF0000; textFormat2.size = 18; textFormat2.underline = true;  function changeText2(e:MouseEvent):void {     	if (e.target.name != "tf2") return;	// get hit pos   	var begin:int = textField2.selectionBeginIndex;	// het hit char	var char:String = textField2.text.charAt(begin);	ctrace("hit char:[{0}] at pos:[{1}]", char, begin)	// find word begin	while (begin > -1 && char != " "){				begin--;		char = textField2.text.charAt(begin);			}	begin++	// find word end	var end_pattern:RegExp = /[ |.|,]/;	var str_before:String = textField2.text.substr(0, begin)	var str_after:String = textField2.text.substr(begin);	ctrace("str rest:{0}", str_after)	var end:int = str_after.search(end_pattern);	end += str_before.length;	ctrace("hit char:[{0}] at range:[{1} - {2}]", char, begin, end)    textField2.setTextFormat(textFormat2, begin, end); }