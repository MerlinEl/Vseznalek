Top="10" paddingBottom="10"            horizontalCenter="0" verticalCenter="0">        <mx:Label width="100%" color="blue"            text="Click the Button control to see panel properties."/>        <s:TextArea id="panelPropertyArea" width="100%" height="100%"/>        <s:Button label="Click to view Panel properties" click="showProperties();"/>    </mx:Panel></s:Application>