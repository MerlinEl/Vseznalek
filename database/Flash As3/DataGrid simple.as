// DATAGRIDvar indexCol:DataGridColumn = new DataGridColumn("index");indexCol.headerText = "ID";indexCol.width = 30;indexCol.editable = false;var textCol:DataGridColumn = new DataGridColumn("text");textCol.headerText = "Text";textCol.width = 100;textCol.editable = true;data_grid.columns = [indexCol, textCol];var dp:Array=new Array();for (var i:int = 0; i < 10; i++) {	dp.push({index: i, text: "text_"+i });}data_grid.dataProvider = new DataProvider(dp);data_grid.sortableColumns = false;