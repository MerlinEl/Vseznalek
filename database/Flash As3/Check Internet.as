import air.net.URLMonitor;import flash.events.EventDispatcher;import flash.events.StatusEvent;import flash.net.URLRequest;import orien.tools.mcCustomEvent;var monitor:URLMonitor;checkInternet();function checkInternet():void {		trace("checkInternet 1")	monitor = new URLMonitor(new URLRequest('http://www.google.com'));	trace("checkInternet 2")	monitor.pollInterval = 1000; // Frequency the URL will be tested in milliseconds.	trace("checkInternet 3")	monitor.addEventListener(StatusEvent.STATUS, announceStatus);	trace("checkInternet 4")	monitor.start();	trace("checkInternet 5")}function announceStatus(e:StatusEvent):void {		trace("checkInternet 6")	if (monitor.available) {		trace("checkInternet true")		dispatchEvent(new mcCustomEvent("INTERNET_WAS_CHECKED", { "available":true } ));	} else {		trace("checkInternet false")		dispatchEvent(new mcCustomEvent("INTERNET_WAS_CHECKED", { "available":false } ));	}	monitor.stop();	monitor.removeEventListener(StatusEvent.STATUS, announceStatus);}