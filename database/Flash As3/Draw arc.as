function drawArc(grx:Graphics, centerX:int, centerY:int, radius:int, startAngle:Number, arcAngle:Number, steps:int){    startAngle -= .25;    var twoPI:Number = 2 * Math.PI;    var angleStep:Number = arcAngle/steps;    var xx:Number = centerX + Math.cos(startAngle * twoPI) * radius;    var yy:Number = centerY + Math.sin(startAngle * twoPI) * radius;    grx.moveTo(xx, yy);    for(var i:int=1; i<=steps; i++){        var angle:Number = startAngle + i * angleStep;        xx = centerX + Math.cos(angle * twoPI) * radius;        yy = centerY + Math.sin(angle * twoPI) * radius;        grx.lineTo(xx, yy);    }}