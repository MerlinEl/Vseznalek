import flash.display.Sprite;import flash.display.Shape;import flash.events.Event;import flash.geom.Point;import orien.tools.mcVector2D;import orien.tools.mcTran;var start_pos:Point = new Point(stage.stageWidth / 2, stage.stageHeight / 2); var end_pos:Point = new Point(start_pos.x + 200, start_pos.y);var next_pos:Point = new Point(start_pos.x, start_pos.y);var speed:Number = 10;var v:mcVector2D = new mcVector2D(end_pos, start_pos);var len:Number = v.length;v.normalize();var container:Sprite = new Sprite(); container.graphics.lineStyle(2, 0xFF0000, 1);addChild(container); addEventListener(Event.ENTER_FRAME, doEveryFrame);  function doEveryFrame(event:Event):void { 		if (v.length >= len) {				removeEventListener(Event.ENTER_FRAME, doEveryFrame);		return;	}	container.graphics.moveTo(start_pos.x + v.toPoint().x, start_pos.y + v.toPoint().y);	v.length+=speed	container.graphics.lineTo(start_pos.x + v.toPoint().x, start_pos.y + v.toPoint().y);} 