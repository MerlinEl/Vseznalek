package classes {		import fl.controls.Button;	import flash.text.TextField;	import flash.text.TextFormat;	import fl.controls.listClasses.ICellRenderer;	import fl.controls.listClasses.ListData;	import flash.events.MouseEvent;		public class CellRendererCheckBoxPainted extends Button implements ICellRenderer {				private var _listData:ListData;		private var _data:Object;		private var checkField:TextField = new TextField();				public function CellRendererCheckBoxPainted() {					var tfo:TextFormat = new TextFormat("Lucida Sans Unicode", 10, 0x000000);			//setStyle("upSkin", "Button_upSkin"); //overSkin			tabEnabled = false;			focusEnabled = false;			checkField.setTextFormat(tfo);			addChild(checkField);		}				public function set data(data_provider_row:Object):void {						if (_data == data_provider_row) return;						_data = data_provider_row;			_data["checked"] = data_provider_row.indexMod.checked;			label = "";			drawSprite();			this.addEventListener(MouseEvent.MOUSE_DOWN, onCheckBoxCanged, false, 0, true);		}				public function get data():Object {						return _data;		}				public function set listData(ld:ListData):void {						_listData = ld;			drawSprite();		}				public function get listData():ListData {						return _listData;		}				private function drawSprite() {						graphics.clear();			_data["checked"]{								graphics.lineStyle(1, 0x000000);				//graphics.moveTo(2, 2);				//graphics.lineTo(2, 2);				graphics.beginFill(0xD2DBDB);				graphics.drawRect(4, 4, width-8, height-8);				graphics.endFill();			}			checkField.text = _data["checked"] ? " âœ”" : "";		}				private function onCheckBoxCanged(e:MouseEvent) {						//Utils.writeLine("CellRendererCheckBox > onCheckBoxChanged > name:{0} checked:{1}", e.target.name, _data["checked"])			_data["checked"] = !_data["checked"];			/*if (_data["checked"]) {				_data["checked"] = false;			} else {				_data["checked"] = true;			}*/			drawSprite();		}	}}