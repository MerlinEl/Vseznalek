var myTween:Tween;fadeIn();function fadeIn():void{  myTween = new Tween(text_mc, "alpha", Strong.easeIn, 0, 1, 3, true);  myTween.addEventListener(TweenEvent.MOTION_FINISH, tweenFinishedHandler);}var timer:Timer;function tweenFinishedHandler(event:TweenEvent):void{  timer = new Timer(3000,1); //3 seconds, 1 time.  timer.addEventListener(TimerEvent.COMPLETE, fadeBackOut);  timer.start();}function fadeBackOut(e:Event):void{  myTween = new Tween(text_mc, "alpha", Strong.easeIn, 1, 0, 2, true);  timer = null;}