class DynamicProperty {    private var _getter:Function, _setter:Function;    private var _source:*, _prop:String;    public function DynamicProperty(source:*, prop:String, getter:Function, setter:Function):void {        _getter = getter;        _setter = setter;        _source = source;        _prop = prop;    }    public function get value():* {        return _getter(_source[_prop]);    }    public function set value(val:*):void {        _source[_prop] = _setter(val);    }}     var data:Object = {           celsius: 0       };       data.kelvin = new DynamicProperty(data,"celsius",            function(v:Number):Number { return v + 273.15; },            function(v:Number):Number { return v - 273.15; });		   	data.kelvin.valuedata.kelvin.value = 0; // absolute zero