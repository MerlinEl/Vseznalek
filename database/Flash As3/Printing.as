       import flash.printing.*;  function print()        {            this.hideEdit();            var pj:* = new PrintJob();            var page:* = new Sprite();            page.addChild(new Bitmap(this.bgBmd, "never", true));            pj.start();            var imageProp:* = page.width / page.height;            var printProp:* = pj.pageWidth / pj.pageHeight;            if (pj.orientation == PrintJobOrientation.LANDSCAPE)            {                printProp = 1 / printProp;            }            if (imageProp > printProp)            {                page.width = pj.pageWidth;                page.height = pj.pageWidth / imageProp;            }            else            {                page.width = pj.pageHeight * imageProp;                page.height = pj.pageHeight;            }            try            {                pj.addPage(page, null, new PrintJobOptions(false));                pj.send();            }            catch (e:Error)            {                trace(e);            }            return;        }// end function