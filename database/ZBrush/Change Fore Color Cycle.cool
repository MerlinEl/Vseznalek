/* 	Change Main color to R or G or B	//[IShowActions,0]	//[IConfig,2019]*/[IButton,???,"Change Fore Color.",	[VarSet, col, [IGet,Color:SecondaryColor]]	[VarMul,col,65536]	[VarSet,R,INT(col/65536)]	[VarSub,col,R*65536]		[VarSet,G,INT(col/256)]	[VarSub,col,G*256]	[VarSet,B,col]	//[Note,[StrMerge,"R = ",#R,"\nG = ",#G,"\nB = ",#B]]		[VarSet, colr, [RGB,255,0,0]]	[VarSet, colg, [RGB,0,255,0]]	[VarSet, colb, [RGB,0,0,255]]	[Loop,1,		[If,(R > 0),//If Is Red change to Green			[ISet,Color:Secondary Color,colg/65536]			[LoopExit]		]		[If,(G > 0),//If is Green change to Blue			[ISet,Color:Secondary Color,colb/65536]			[LoopExit]		]		[If,(B > 0),//If is Blue change to Red			[ISet,Color:Secondary Color,colr/65536]			[LoopExit]		]	]  ]