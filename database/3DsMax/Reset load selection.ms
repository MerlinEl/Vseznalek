--ResetXform+Collapse to Editable Poly+Move to 0 (if keyboard shift pressed stay at position)fn resetPolyAndCenterToStage =(		local sel = $selection as array	for o in sel do(		convertTo o PolyMeshObject		ResetXForm o		CollapseStack o		if not keyboard.shiftPressed do o.pos = [0,0,0]	)	if (queryBox "Reset is complete. Add selection in to New Scene?" title: "Micra") == true do (				local tmp = ((GetDir #export) + "\mRepair.max")		saveNodes sel tmp--save selection		resetMaxFile #noPrompt		mergeMAXFile tmp #useSceneMtlDups #mergeDups #select --merge		max zoomext sel		messageBox "Operation is finished."	))resetPolyAndCenterToStage()