function validateEmail(str:String):Boolean {	var pattern:RegExp = /(\w|[_.\-])+@((\w|-)+\.)+\w{2,4}+/;	var result:Object = pattern.exec(str);	if(result == null) {		return false;	}	return true;}		private static function isValidEmail(email:String):Boolean {			var emailExpression:RegExp = /^[a-z][\w.-]+@\w[\w.-]+\.[\w.-]*[a-z][a-z]$/i;			return emailExpression.test(email);		}