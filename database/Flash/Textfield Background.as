		function makeBackground(target:Textfield):void {						var temp:Sprite = new Sprite();			temp.graphics.beginFill(0x675F2E, 0.5); // second param controls alpha			temp.graphics.drawRect(0, 0, target.width, target.height); // making rect the size of the tf			temp.graphics.endFill();			temp.x = target.x; // positioning it			temp.y = target.y;						addChild(temp); // adding it			swapChildren(temp, target); // swapping places with tf so it doesn't cover it		}