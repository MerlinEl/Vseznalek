		private var colorPicker:ColorPicker = new ColorPicker();		private const TASK_COLORS:Array = [0xC0C0C0, 0xFF5F11, 0xFE2607, 0x00FF40];		private function initPalette(pos_x:Number, pos_y:Number, icon_size:Number):void {				colorPicker.colors = TASK_COLORS;			colorPicker.selectedColor = TASK_COLORS[0];			colorPicker.setStyle('columnCount', 6); 			colorPicker.setStyle('swatchWidth', 12); 			colorPicker.setStyle('swatchHeight', 12); 			colorPicker.setStyle('swatchPadding', 2); 			colorPicker.setStyle('backgroundPadding', 2); 			colorPicker.setStyle('textPadding', 7);			colorPicker.width = icon_size;			colorPicker.height = icon_size;			colorPicker.x = pos_x;			colorPicker.y = pos_y;			addChild(colorPicker);		}